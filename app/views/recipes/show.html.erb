<%= render 'shared/page_title', title: @recipe.name %>
<div class="row bg-light mb-5">
  <div class="col-md-10 ">
    <h4 class="center description"><strong>Steps: </strong></h4>
    <hr />
      <%= simple_format(@recipe.description) %>
      <hr />
      <% if @recipe.ingredients.any?%>
      <p class="bg-primary">Ingredients: <%= render @recipe.ingredients, class: "ingredient-green" %></p>
      <% end %>
        <div class="float-right">
      <p class="center">
      <em>Created by:</em>
      </p>
      <p class="center">
      <%= link_to gravatar_for(@recipe.chef), chef_path(@recipe.chef)  %>
      </p>
      <p class="center">
      <small><%= @recipe.chef.chefname.capitalize %></small>
      <div class="float-right">
      <%= time_ago_in_words(@recipe.created_at) %>
      ago
      </div>
      </p>
      </div>
      </p>
      <div class="recipe-actions">
      <% if logged_in? && (current_chef == @recipe.chef || current_chef.admin?) %>
        <%= link_to "Edit this recipe", edit_recipe_path(@recipe), class: "btn btn-xs btn-warning" %>
        <%= link_to "Delete this recipe", recipe_path(@recipe), method: :delete,
                                          data: { confirm: "Are you sure you want to delete this recipe?" },
                                          class: "btn btn-xs btn-danger" %>
      <% end %>
      <%= link_to "Return to recipes listing", recipes_path, class: "btn btn-xs btn-primary" %>
    </div>
  </div>
</div>

<% if @recipe.comments != 0 %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h3>Prior Comments: </h3>
        <div id="messages">
          <%= render partial: 'comments/comments', object: @comments %>
        </div>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h3>No Comments Yet!</h3>
    </div>
  </div>
<% end %>

